		<!-- Email -->
		<email.host></email.host>
		<email.port>8080</email.port>
		<email.username></email.username>
		<email.pw></email.pw>
		<email.from></email.from>
		<email.enabled>true</email.enabled>

		<!-- Tomcat -->
		<tomcat.manager.path></tomcat.manager.path>
		<tomcat.server.id></tomcat.server.id>
		<tomcat.appname>ep-grazer</tomcat.appname>
