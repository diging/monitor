		<spring-security-version>5.5.7</spring-security-version>
		<encoding.type>{bcrypt}</encoding.type>
		<admin.password>$2y$12$AJZLdMlxFVueyEUwjPNjo.df2235U0BTudUjY915T4on73our8x0C</admin.password>
		<encryption.password>password</encryption.password>
		<log.level>debug</log.level>

		<!-- DB config -->
		<db.driver>com.mysql.jdbc.Driver</db.driver>
		<db.database.url>jdbc:mysql://localhost:3306/monitor</db.database.url>
		<db.user>dbadmin</db.user>
